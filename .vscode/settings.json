{
	// ============================================================================
	// MONOREPO WORKSPACE SETTINGS - CeraUI
	// ============================================================================
	// Perfect tool separation: Biome (TS/JS/JSON) + ESLint+Prettier (Svelte only)

	// ============================================================================
	// GLOBAL EDITOR SETTINGS (Linux style, consistent with linters)
	// ============================================================================
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"editor.insertSpaces": false,
	"editor.tabSize": 2,
	"editor.detectIndentation": false,
	"editor.rulers": [100],
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.organizeImports": "explicit"
	},

	// File settings (Linux LF style - matches Biome & Prettier)
	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,

	// TypeScript global settings
	"typescript.preferences.includePackageJsonAutoImports": "on",
	"typescript.suggest.autoImports": true,
	"typescript.updateImportsOnFileMove.enabled": "always",

	  // ============================================================================
  // BIOME CONFIGURATION (Global default for all files except .svelte)
  // ============================================================================
  "biome.enabled": true,
  "biome.lsp.bin": "pnpm exec biome",

  // ============================================================================
  // ESLINT CONFIGURATION (Only for Svelte files)
  // ============================================================================
  "eslint.enable": true,
  "eslint.workingDirectories": ["./apps/frontend"],
  "eslint.validate": ["svelte"],

  // ============================================================================
  // DEFAULT FORMATTERS (Simple file-type based)
  // ============================================================================

  // Biome handles all these file types globally
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.organizeImports.biome": "explicit",
      "source.fixAll.biome": "explicit"
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.organizeImports.biome": "explicit",
      "source.fixAll.biome": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.biome": "explicit"
    }
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.biome": "explicit"
    }
  },

  // Svelte files: ESLint + Prettier only (Biome explicitly disabled)
  "[svelte]": {
    "biome.enabled": false,
    "editor.defaultFormatter": "svelte.svelte-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit",
      "source.fixAll.biome": "never"
    }
  },

	// ============================================================================
	// SVELTE FRAMEWORK SETTINGS
	// ============================================================================
	"svelte.enable-ts-plugin": true,
	"svelte.plugin.svelte.compilerWarnings": {
		"a11y-click-events-have-key-events": "ignore"
	},

	// ============================================================================
	// TAILWIND CSS INTELLISENSE
	// ============================================================================
	"tailwindCSS.includeLanguages": {
		"svelte": "html"
	},
	"tailwindCSS.classAttributes": ["class", "className", "class:list", "classList"],

	// ============================================================================
	// FILE ASSOCIATIONS
	// ============================================================================
	"files.associations": {
		"*.svelte": "svelte"
	},

	// ============================================================================
	// CURSOR/VS CODE OPTIMIZATIONS
	// ============================================================================
	"cursor.cpp.disabledLanguages": [],
	"editor.minimap.enabled": true,
	"workbench.editor.enablePreview": false
}

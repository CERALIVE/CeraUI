{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "pnpm install",
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Dev Server",
			"type": "shell",
			"command": "pnpm run dev",
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Lint All",
			"type": "shell",
			"command": "pnpm run lint",
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": ["$eslint-stylish", "$tsc"]
		},
		{
			"label": "Lint Fix All",
			"type": "shell",
			"command": "pnpm run lint:fix",
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": ["$eslint-stylish", "$tsc"]
		},
		{
			"label": "Frontend: Lint Svelte",
			"type": "shell",
			"command": "pnpm run lint",
			"options": {
				"cwd": "./apps/frontend"
			},
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": ["$eslint-stylish"]
		},
		{
			"label": "Frontend: Lint Fix Svelte",
			"type": "shell",
			"command": "pnpm run lint:fix",
			"options": {
				"cwd": "./apps/frontend"
			},
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": ["$eslint-stylish"]
		},
		{
			"label": "Frontend: Type Check",
			"type": "shell",
			"command": "pnpm run check",
			"options": {
				"cwd": "./apps/frontend"
			},
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": ["$tsc"]
		}
	]
}





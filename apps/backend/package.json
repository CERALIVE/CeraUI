{
	"name": "backend",
	"version": "1.0.0",
	"description": "belaUI backend - Node.js/Bun server for BELABOX live streaming hardware",
	"type": "module",
	"author": "Andr√©s Cera",
	"license": "GPL-3.0",
	"dependencies": {
		"@rollup/rollup-linux-arm64-gnu": "^4.46.4",
		"finalhandler": "^2.1.0",
		"http-proxy": "^1.18.1",
		"serve-static": "^2.2.0",
		"winston": "^3.17.0",
		"ws": "^8.18.3",
		"xml2js": "^0.6.2"
	},
	"devDependencies": {
		"@types/bun": "^1.2.20",
		"@types/finalhandler": "^1.2.4",
		"@types/http-proxy": "^1.17.16",
		"@types/serve-static": "^1.15.8",
		"@types/ws": "^8.18.1",
		"@types/xml2js": "^0.4.14",
		"npm-run-all2": "^8.0.4",
		"typescript": "^5.9.2"
	},
	"scripts": {
		"build": "rm -rf ../../dist/ && bun build --compile --minify --sourcemap --bytecode --target=bun-linux-arm64 src/belaUI.ts --outfile ../../dist/belaUI && pnpm build:frontend",
		"build:backend-only": "rm -rf ../../dist/belaUI ../../dist/deployment && bun build --compile --minify --sourcemap --bytecode --target=bun-linux-arm64 src/belaUI.ts --outfile ../../dist/belaUI",
		"build:frontend": "cd ../frontend && pnpm build",
		"check": "run-p check:*",
		"check:biome": "bun x --bun @biomejs/biome check .",
		"check:tsc": "bun tsc --noEmit",
		"dev": "bun run src/belaUI.ts",
		"fix": "bun x --bun @biomejs/biome check --write .",
		"format": "bun x --bun @biomejs/biome format --write .",
		"format:check": "bun x --bun @biomejs/biome format .",
		"lint": "bun x --bun @biomejs/biome lint .",
		"lint:fix": "bun x --bun @biomejs/biome lint --write .",

		"clean": "rm -rf ../../dist/ && rm -rf node_modules"
	},
	"trustedDependencies": ["@biomejs/biome"]
}

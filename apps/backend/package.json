{
	"name": "backend",
	"type": "module",
	"dependencies": {
		"@rollup/rollup-linux-arm64-gnu": "^4.34.9",
		"@types/xml2js": "^0.4.14",
		"finalhandler": "^1.3.1",
		"serve-static": "^1.16.2",
		"winston": "^3.17.0",
		"ws": "^8.18.1",
		"xml2js": "^0.6.2"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/bun": "^1.2.17",
		"@types/finalhandler": "^1.2.3",
		"@types/serve-static": "^1.15.7",
		"@types/ws": "^8.18.0",
		"globals": "^16.2.0",
		"npm-run-all2": "^8.0.4",
		"typescript": "^5.8.3"
	},
	"scripts": {
		"build": "rm -rf dist/ && bun build --compile --minify --sourcemap --bytecode --target=bun-linux-arm64 src/belaUI.ts --outfile dist/belaUI && pnpm build:copy-deployment",
		"check": "run-p check:*",
		"check:biome": "bun x --bun @biomejs/biome check .",
		"check:tsc": "cd src && tsc",
		"dev": "cd src && bun run belaUI.ts",
		"fix": "bun x --bun @biomejs/biome check --write .",
		"format": "bun x --bun @biomejs/biome format --write .",
		"lint": "bun x --bun @biomejs/biome lint --write .",
		"build:copy-deployment": "cp -r ./deployment/* ./dist/",
		"clean": "rm -rf dist/ && rm -rf node_modules"
	},
	"trustedDependencies": [
		"@biomejs/biome"
	]
}

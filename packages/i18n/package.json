{
	"name": "@ceraui/i18n",
	"version": "1.0.0",
	"description": "Typesafe internationalization package for CeraUI",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		},
		"./svelte": {
			"types": "./src/i18n-svelte5.ts",
			"import": "./src/i18n-svelte5.ts"
		},
		"./node": {
			"types": "./src/i18n-node.ts",
			"import": "./src/i18n-node.ts"
		}
	},
	"scripts": {
		"dev": "typesafe-i18n",
		"build": "typesafe-i18n --no-watch && tsc",
		"typesafe-i18n": "typesafe-i18n --no-watch",
		"postinstall": "typesafe-i18n --no-watch",
		"prepare": "typesafe-i18n --no-watch"
	},
	"dependencies": {
		"typesafe-i18n": "^5.26.2"
	},
	"devDependencies": {
		"typescript": "^5.9.2"
	},
	"keywords": [
		"i18n",
		"internationalization",
		"typesafe",
		"svelte",
		"typescript"
	],
	"license": "GPL-3.0"
}

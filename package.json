{
	"type": "module",
	"dependencies": {
		"finalhandler": "^1.3.1",
		"serve-static": "^1.16.2",
		"ws": "^8.18.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bcrypt": "^5.0.2",
		"@types/bun": "^1.2.0",
		"@types/finalhandler": "^1.2.3",
		"@types/serve-static": "^1.15.7",
		"@types/ws": "^8.5.14",
		"npm-run-all2": "^7.0.2",
		"typescript": "^5.7.3"
	},
	"scripts": {
		"dev": "bun run ./src/belaUI.ts",
		"format": "bun x --bun @biomejs/biome format --write ./src ./public/script.js ./public/style.css",
		"fix": "bun x --bun @biomejs/biome check --write ./src",
		"check": "run-p check:*",
		"check:tsc": "tsc",
		"check:biome": "bun x --bun @biomejs/biome check ./src",
		"build": "bun build --compile ./src/belaUI.ts --outfile ./dist/belaUI",
		"build:linux-arm64": "bun build --compile --target=bun-linux-arm64 ./src/belaUI.ts --outfile ./dist/belaUI",
		"copy": "cp -r ./public ./dist/"
	},
	"trustedDependencies": ["@biomejs/biome"]
}

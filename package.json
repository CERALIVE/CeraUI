{
  "name": "cera-workspace",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo workspace containing CeraUI frontend and belaUI backend",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/CERALIVE/CeraUI.git"
  },
  "author": "Andr√©s Cera",
  "license": "GPL-3.0",
  "scripts": {
    "dev": "mprocs",
    "dev:parallel": "pnpm --parallel --filter \"./apps/*\" run dev",
    "build": "pnpm --recursive --filter \"./apps/*\" run build",
    "build:frontend": "pnpm --filter frontend run build",
    "build:backend": "pnpm --filter backend run build",
    "preview": "pnpm --filter frontend run preview",
    "check": "pnpm --recursive --filter \"./apps/*\" run check",
    "typecheck": "pnpm --recursive --filter \"./apps/*\" run check",
    "format": "pnpm --recursive run format",
    "format:check": "prettier --check .",
    "lint": "pnpm --recursive --filter \"./apps/*\" run lint",
    "lint:fix": "pnpm --recursive --filter \"./apps/*\" run lint:fix",
    "clean": "pnpm --recursive --filter \"./apps/*\" run clean && rm -rf node_modules",
    "clean:all": "pnpm clean && rm -rf node_modules/.pnpm-store"
  },
  "devDependencies": {
    "mprocs": "^0.7.3",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "volta": {
    "node": "22.11.0"
  }
}
{
  "name": "cera-workspace",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo workspace containing multiple related projects",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/CERALIVE/CeraUI.git"
  },
  "author": "Andr√©s Cera",
  "license": "GPL-3.0",
  "scripts": {
    "dev": "mprocs",
    "dev:parallel": "pnpm --parallel run dev",
    "build": "pnpm --recursive run build",
    "preview": "pnpm --parallel run preview",
    "check": "pnpm --recursive run check",
    "format": "pnpm --recursive run format",
    "lint": "pnpm --recursive run lint",
    "lint:fix": "pnpm --recursive run lint:fix",
    "clean": "pnpm --recursive run clean && rm -rf node_modules",
    "frontend:dev": "pnpm --filter frontend run dev",
    "frontend:build": "pnpm --filter frontend run build",
    "frontend:preview": "pnpm --filter frontend run preview",
    "backend:dev": "pnpm --filter backend run dev",
    "backend:build": "pnpm --filter backend run build",
    "backend:check": "pnpm --filter backend run check"
  },
  "devDependencies": {
    "mprocs": "^0.7.3",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "volta": {
    "node": "22.11.0"
  }
}